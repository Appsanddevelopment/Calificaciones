<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TabHost android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TabWidget android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@android:id/tabs" />

            <FrameLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@android:id/tabcontent" >

                <RelativeLayout android:id="@+id/tab1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Aquí va el contenido de la tab 1 -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="350dp"
                            android:layout_height="match_parent"
                            android:elevation="30dp"
                            android:background="#F1F1F1">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/string_corte1"
                                        android:id="@+id/textView3"
                                        android:layout_weight="0.20"
                                        android:editable="false"
                                        android:gravity="center"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/string_corte2"
                                        android:id="@+id/textView4"
                                        android:layout_weight="0.20"
                                        android:editable="false"
                                        android:gravity="center" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/string_corte3"
                                        android:id="@+id/textView5"
                                        android:layout_weight="0.20"
                                        android:editable="false"
                                        android:gravity="center" />
                                </LinearLayout>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true">

                                    <EditText
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:inputType="numberDecimal"
                                        android:ems="5"
                                        android:id="@+id/txtNota1"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        />

                                    <EditText
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:inputType="numberDecimal"
                                        android:ems="5"
                                        android:id="@+id/txtNota2"
                                        android:layout_weight="1"
                                        android:gravity="center"/>

                                    <EditText
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:inputType="numberDecimal"
                                        android:ems="5"
                                        android:id="@+id/txtNota3"
                                        android:layout_weight="1"
                                        android:gravity="center"/>
                                </TableRow>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/string_70"
                                        android:id="@+id/textView8"
                                        android:gravity="center"
                                        android:layout_weight="0.065"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/string_notaMinima"
                                        android:id="@+id/textView9"
                                        android:gravity="center"
                                        android:layout_weight="0.03"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/string_NotaExamen"
                                        android:id="@+id/textView12"
                                        android:layout_weight="0.045"
                                        android:gravity="center"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/string_notaDefault"
                                        android:id="@+id/lblNotaMateria"
                                        android:layout_weight="0.155"
                                        android:gravity="center"
                                        android:textSize="30dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/string_notaDefault"
                                        android:id="@+id/lblNotaExamen"
                                        android:layout_weight="0.40"
                                        android:gravity="center"
                                        android:textSize="30dp"/>

                                    <EditText
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:inputType="numberDecimal"
                                        android:ems="0"
                                        android:id="@+id/txtExamen"
                                        android:layout_weight="0.74"
                                        android:gravity="center"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_horizontal"
                                    android:weightSum="1">

                                    <TextView
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:text="@string/string_definitiva"
                                        android:id="@+id/textView11"
                                        android:gravity="center" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="fill_parent"
                                        android:text="@string/string_notaDefault"
                                        android:gravity="center"
                                        android:textSize="30dp"
                                        android:id="@+id/lblNotaDefinitiva" />
                                </LinearLayout>

                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:background="#fff">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/buttom_caclcular"
                                android:id="@+id/cmdCalcular70"
                                android:layout_gravity="center_horizontal"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="25dp" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/buttom_caclcular"
                                android:id="@+id/cmdCalcularDefinitiva"
                                android:layout_gravity="center_horizontal"
                                android:layout_below="@+id/cmdCalcular70"
                                android:layout_alignLeft="@+id/cmdCalcular70"
                                android:layout_alignStart="@+id/cmdCalcular70"
                                android:layout_marginTop="20dp" />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout android:id="@+id/tab2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <!-- Aquí va el contenido de la tab 2 -->
                    <WebView
                        android:id="@+id/webView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>