<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".principal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_text1"
                android:id="@+id/textView3"
                android:layout_weight="0.35"
                android:editable="false"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_text2"
                android:id="@+id/textView4"
                android:layout_weight="0.35"
                android:editable="false"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_text3"
                android:id="@+id/textView5"
                android:layout_weight="0.35"
                android:editable="false"
                android:gravity="center" />
        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/txtNota1"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/string_notaDefault" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/txtNota2"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/string_notaDefault" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/txtNota3"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/string_notaDefault" />
        </TableRow>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttom_calcular"
            android:id="@+id/cmdCalcular70"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_70"
                android:id="@+id/textView8"
                android:gravity="center"
                android:layout_weight="0.4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_notaMinima"
                android:id="@+id/textView9"
                android:gravity="center"
                android:layout_weight="0.2"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_notaDefault"
                android:id="@+id/lblNotaMateria"
                android:layout_weight="0.33"
                android:gravity="center"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_notaDefault"
                android:id="@+id/lblNotaExamen"
                android:layout_weight="0.65"
                android:gravity="center"
                android:textSize="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_NotaExamen"
                android:id="@+id/textView12"
                android:layout_weight="0.2"
                android:gravity="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="0"
                android:id="@+id/txtExamen"
                android:layout_weight="0.74"
                android:gravity="center"
                android:hint="@string/string_notaDefault" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttom_calcular"
            android:id="@+id/calcularDefinitiva"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/string_definitiva"
                android:id="@+id/textView11"
                android:layout_gravity="center_horizontal"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_weight="0.12"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:text="@string/string_notaDefault"
                android:layout_weight="0.33"
                android:id="@+id/lblNotaDefinitiva"
                android:gravity="center"
                android:textSize="30dp"/>/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
